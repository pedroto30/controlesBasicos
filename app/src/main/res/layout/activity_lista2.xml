<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listaActivity2">

    <Button
        android:id="@+id/btnPaises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:text="Paises"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bntPlanetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="92dp"
        android:text="Planetas"
        app:layout_constraintStart_toEndOf="@+id/btnPaises"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lsvDatos"
        android:layout_width="410dp"
        android:layout_height="450dp"
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPaises"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/bntNombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="96dp"
        android:text="Nombres"
        app:layout_constraintStart_toEndOf="@+id/bntPlanetas"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>